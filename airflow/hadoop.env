# Hadoop Environment Variables for NameNode

# Cluster Configuration
CLUSTER_NAME=test

# HDFS Configuration
CORE_CONF_fs_defaultFS=hdfs://namenode:8020
CORE_CONF_hadoop_http_staticuser_user=root
CORE_CONF_hadoop_proxyuser_hue_hosts=*
CORE_CONF_hadoop_proxyuser_hue_groups=*
CORE_CONF_io_compression_codecs=org.apache.hadoop.io.compress.SnappyCodec
CORE_CONF_hadoop_security_authentication=simple
CORE_CONF_hadoop_security_authorization=false
CORE_CONF_hadoop_rpc_socket_factory_class_default=org.apache.hadoop.net.StandardSocketFactory

# HDFS NameNode Configuration
HDFS_CONF_dfs_webhdfs_enabled=true
HDFS_CONF_dfs_permissions_enabled=false
HDFS_CONF_dfs_namenode_datanode_registration_ip___hostname___check=false
HDFS_CONF_dfs_namenode_rpc___address=namenode:8020
HDFS_CONF_dfs_namenode_servicerpc___address=namenode:8022
HDFS_CONF_dfs_namenode_http___address=namenode:9870
HDFS_CONF_dfs_namenode_https___address=namenode:9871
HDFS_CONF_dfs_client_use_datanode_hostname=true
HDFS_CONF_dfs_datanode_use_datanode_hostname=true
HDFS_CONF_dfs_namenode_name_dir=/hadoop/dfs/name
HDFS_CONF_dfs_datanode_data_dir=/hadoop/dfs/data
HDFS_CONF_dfs_replication=1
HDFS_CONF_dfs_namenode_safemode_threshold_pct=0.0
HDFS_CONF_dfs_namenode_safemode_min_datanodes=0
HDFS_CONF_dfs_datanode_address=0.0.0.0:50010
HDFS_CONF_dfs_datanode_http_address=0.0.0.0:50075
HDFS_CONF_dfs_datanode_ipc_address=0.0.0.0:50020

# YARN Configuration
YARN_CONF_yarn_log___aggregation___enable=true
YARN_CONF_yarn_log_server_url=http://historyserver:8188/applicationhistory/logs/
YARN_CONF_yarn_resourcemanager_recovery_enabled=true
YARN_CONF_yarn_resourcemanager_store_class=org.apache.hadoop.yarn.server.resourcemanager.recovery.FileSystemRMStateStore
YARN_CONF_yarn_resourcemanager_scheduler_class=org.apache.hadoop.yarn.server.resourcemanager.scheduler.capacity.CapacityScheduler
YARN_CONF_yarn_scheduler_capacity_root_default_maximum___allocation___mb=8192
YARN_CONF_yarn_scheduler_capacity_root_default_maximum___allocation___vcores=4

# MapReduce Configuration
MAPRED_CONF_mapreduce_framework_name=yarn
MAPRED_CONF_mapreduce_map_output_compress=true
MAPRED_CONF_mapreduce_map_output_compress_codec=org.apache.hadoop.io.compress.SnappyCodec
MAPRED_CONF_mapreduce_output_fileoutputformat_compress=true
MAPRED_CONF_mapreduce_output_fileoutputformat_compress_codec=org.apache.hadoop.io.compress.SnappyCodec
MAPRED_CONF_mapreduce_output_fileoutputformat_compress_type=BLOCK 